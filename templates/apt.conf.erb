# MANAGED BY PUPPET (network/templates, via params/hiera)
<% unless @http_proxy.nil? then -%>
Acquire::http::Proxy "<%= @http_proxy %>";
<% unless @no_proxy.nil? then -%>
<% @no_proxy.each do |val| -%>
Acquire::http::Proxy::<%= val %> "DIRECT";
<% end -%>
<% end -%>
<% end -%>
<% unless @https_proxy.nil? then -%>
Acquire::https::Proxy "<%= @https_proxy %>";
<% unless @no_proxy.nil? then -%>
<% @no_proxy.each do |val| -%>
Acquire::https::Proxy::<%= val %> "DIRECT";
<% end -%>
<% end -%>
<% end -%>
